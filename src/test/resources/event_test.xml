<?xml version="1.0" encoding="UTF-8"?>
<process xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../main/resources/petriNets/petriflow_schema.xsd">
    <id>test</id>
    <version>1.0.0</version>
    <title>Test</title>
    <data type="text">
        <id>task_assign_pre</id>
        <title>task_assign_pre</title>
    </data>
    <data type="text">
        <id>task_assign_post</id>
        <title>task_assign_post</title>
    </data>
    <data type="text">
        <id>task_finish_pre</id>
        <title>task_finish_pre</title>
    </data>
    <data type="text">
        <id>task_finish_post</id>
        <title>task_finish_post</title>
    </data>
    <data type="text">
        <id>task_cancel_pre</id>
        <title>task_cancel_pre</title>
        <action trigger="set">
            <!-- @formatter:off -->
            change chained about {
                return "chained"
            }
            <!-- @formatter:on -->
        </action>
    </data>
    <data type="text">
        <id>task_cancel_post</id>
        <title>task_cancel_post</title>
    </data>
    <data type="text">
        <id>chained</id>
        <title>chained</title>
    </data>
    <transition>
        <id>task</id>
        <x>0</x>
        <y>0</y>
        <title>task</title>
        <event type="assign">
            <id>task_assign</id>
            <title>Prirad</title>
            <message>Task assigned</message>
            <actions phase="post">
                <action>
                    <!-- @formatter:off -->
                    change task_assign_post about {
                        return "task_assign_post"
                    }
                    <!-- @formatter:on -->
                </action>
            </actions>
            <actions phase="pre">
                <action>
                    <!-- @formatter:off -->
                    change task_assign_pre about {
                        return "task_assign_pre"
                    }
                    <!-- @formatter:on -->
                </action>
            </actions>
        </event>
        <event type="finish">
            <id>task_finish</id>
            <title>Dokonic</title>
            <message>Task finished</message>
            <actions phase="post">
                <action>
                    <!-- @formatter:off -->
                    change task_finish_post about {
                        return "task_finish_post"
                    }
                    <!-- @formatter:on -->
                </action>
            </actions>
            <actions phase="pre">
                <action>
                    <!-- @formatter:off -->
                    change task_finish_pre about {
                        return "task_finish_pre"
                    }
                    <!-- @formatter:on -->
                </action>
            </actions>
        </event>
        <event type="cancel">
            <id>task_cancel</id>
            <title>Zrus</title>
            <message>Task cancelled</message>
            <actions phase="post">
                <action>
                    <!-- @formatter:off -->
                    change task_cancel_post about {
                        return "task_cancel_post"
                    }
                    <!-- @formatter:on -->
                </action>
            </actions>
            <actions phase="pre">
                <action>
                    <!-- @formatter:off -->
                    change task_cancel_pre about {
                        return "task_cancel_pre"
                    }
                    <!-- @formatter:on -->
                </action>
            </actions> 
        </event>
    </transition>
</process>