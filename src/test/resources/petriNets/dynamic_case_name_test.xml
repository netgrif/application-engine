<document xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="https://petriflow.com/petriflow.schema.xsd">
    <id>dynamic_choices</id>
    <title>dynamic_choices</title>
    <defaultRole>true</defaultRole>
    <initials>DVT</initials>

    <caseName dynamic="true">
        new I18nString("SK $text.rawValue" as String, ["en": "EN $text.rawValue" as String])
    </caseName>
    <!-- ROLES -->
    <data type="number">
        <id>number</id>
        <title>number</title>
        <init dynamic="true">1 + 2 + 3</init>
    </data>
    <data type="text">
        <id>text</id>
        <title>text</title>
        <init dynamic="true">
            "text value ${number.rawValue as Integer}" as String
        </init>
    </data>

    <transition>
        <id>transition</id>
        <x>200</x>
        <y>200</y>
        <label>Transition</label>
        <assignPolicy>auto</assignPolicy>
    </transition>

</document>