<document xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="https://petriflow.com/petriflow.schema.xsd">
    <id>change_field_value_init</id>
    <title>change_field_value_init</title>
    <defaultRole>true</defaultRole>
    <initials>CFVI</initials>
    <!-- ROLES -->
    <data type="text" immediate="true">
        <id>text_static</id>
        <title>text_static</title>
        <init>TEST VALUE</init>
    </data>

    <data type="text" immediate="true">
        <id>text_dynamic</id>
        <title>text_dynamic</title>
        <init dynamic="true">
            text_static.rawValue + " DYNAMIC"
        </init>
    </data>

    <transition>
        <id>transition0</id>
        <x>0</x>
        <y>0</y>
        <label>whatever 0</label>

        <dataRef>
            <id>text_static</id>
            <logic>
                <behavior>editable</behavior>
            </logic>
        </dataRef>
        <dataRef>
            <id>text_dynamic</id>
            <logic>
                <behavior>editable</behavior>
            </logic>
        </dataRef>

        <event type="finish">
            <id>finish</id>

            <actions phase="pre">
                <action>
                    text_static: f.text_static,
                    text_dynamic: f.text_dynamic;

                    change text_static value { "CHANGED VALUE OF text_static" }
                    change text_dynamic value { "CHANGED VALUE OF text_dynamic" }
                </action>
            </actions>
        </event>
    </transition>

    <transition>
        <id>transition1</id>
        <x>0</x>
        <y>0</y>
        <label>whatever 1</label>

        <dataRef>
            <id>text_static</id>
            <logic>
                <behavior>editable</behavior>
            </logic>
        </dataRef>
        <dataRef>
            <id>text_dynamic</id>
            <logic>
                <behavior>editable</behavior>
            </logic>
        </dataRef>

        <event type="finish">
            <id>finish</id>

            <actions phase="pre">
                <action>
                    text_static: f.text_static,
                    text_dynamic: f.text_dynamic;

                    change text_static value { init }
                    change text_dynamic value { init }
                </action>
            </actions>
        </event>
    </transition>

    <transition>
        <id>transition2</id>
        <x>0</x>
        <y>0</y>
        <label>whatever 2</label>

        <dataRef>
            <id>text_static</id>
            <logic>
                <behavior>editable</behavior>
            </logic>
        </dataRef>
        <dataRef>
            <id>text_dynamic</id>
            <logic>
                <behavior>editable</behavior>
            </logic>
        </dataRef>

        <event type="finish">
            <id>finish</id>

            <actions phase="pre">
                <action>
                    text_static: f.text_static,
                    text_dynamic: f.text_dynamic;

                    change text_dynamic value { init text_static }
                    change text_static value { init text_dynamic }
                </action>
            </actions>
        </event>
    </transition>

</document>