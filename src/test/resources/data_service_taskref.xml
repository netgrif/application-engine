<process xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../main/resources/petriNets/petriflow_schema.xsd">
    <id>refering</id>
    <version>1.0.0</version>
    <title>Refering</title>
    <defaultRole>true</defaultRole>
    <anonymousRole>false</anonymousRole>
    <properties>
        <property key="initials">REF</property>
    </properties>
    <processEvents/>
    <caseEvents/>
    <data type="taskRef">
        <id>ref</id>
        <title/>
    </data>
    <transition>
        <id>t1</id>
        <x>546</x>
        <y>177</y>
        <title>Transition</title>
        <flex>
            <id>t1_flex</id>
            <item>
                <dataRef>
                    <id>ref</id>
                    <logic>
                        <behavior>editable</behavior>
                    </logic>
                </dataRef>
                <properties>
                    <order>0</order>
                    <flex-grow>0</flex-grow>
                    <flex-shrink>1</flex-shrink>
                </properties>
            </item>
        </flex>
        <event type="assign">
            <id>t1_assign</id>
            <actions phase="post">
                <action id="action_0">
					<![CDATA[
                    def refedCase = createCase("referenced");
                    def task = findTask({it.caseId.eq(refedCase.stringId)});
                    change ref value {
                        return [task.stringId]
                    }
                    ]]>
				</action>
            </actions>
        </event>
    </transition>
</process>